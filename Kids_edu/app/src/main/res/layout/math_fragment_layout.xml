<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/mathback"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgViewDigits"
        android:layout_width="100dp"
        android:layout_height="80dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="60dp"
        android:src="@drawable/digits" />

    <TextView
        android:id="@+id/txtViewDigits"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="140dp"
        android:layout_marginTop="5dp"
        android:text="Digits"
        android:textColor="#d6061a"
        android:textSize="25dp" />

    <ImageView
        android:id="@+id/imgViewTables"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/table_icon" />

    <TextView
        android:id="@+id/txtViewTables"
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:text="Tables"
        android:textColor="#d6061a"
        android:textSize="25dp" />
</LinearLayout>