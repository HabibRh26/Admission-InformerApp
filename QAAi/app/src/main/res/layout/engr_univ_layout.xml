<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/engr_uni_img"
        android:layout_width="200dp"
        android:layout_height="150dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/buettrans" />
    <TextView
        android:id="@+id/engr_uni_name"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_below="@+id/engr_uni_img"
        android:background="@drawable/rounded_btn_univ_admission"
        android:text="Public University"
        android:gravity="center"
        android:textColor="#000"
        android:textStyle="bold"
        android:layout_marginLeft="17dp"/>

   </RelativeLayout>