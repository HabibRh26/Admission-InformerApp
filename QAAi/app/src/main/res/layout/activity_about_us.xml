<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AboutUsActivity"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Developer"
        android:textStyle="bold"
        android:textSize="30sp"
        android:gravity="center_horizontal"
        android:textColor="#000"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">
        <ImageView

            android:id="@+id/imgVwMyPic"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/mypic"/>

        <TextView

            android:layout_toRightOf="@+id/imgVwMyPic"
            android:id="@+id/txtVwName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutUs_name"
            android:textAppearance="@style/TextAppearance.AppCompat.Medium"
            android:textStyle="bold"/>
        <TextView
            android:layout_below="@+id/txtVwName"
            android:layout_alignLeft="@+id/txtVwName"
            android:id="@+id/txtVwDept"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutUs_dept" />
        <TextView
            android:layout_below="@+id/txtVwDept"
            android:layout_alignLeft="@+id/txtVwDept"
            android:id="@+id/txtVwUniv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/aboutUs_univ" />

    </RelativeLayout>



</LinearLayout>